@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-5 text-center">
                    <!-- Error Icon -->
                    <div class="mb-4">
                        <i class="fas fa-ban fa-5x text-danger"></i>
                    </div>

                    <!-- Error Title -->
                    <h1 class="display-4 text-danger fw-bold mb-3">Access Denied</h1>

                    <!-- Error Message -->
                    <p class="lead text-muted mb-4">
                        You don't have permission to access this page.
                        This area requires specific role privileges that your account doesn't currently have.
                    </p>

                    <!-- Additional Information -->
                    <div class="alert alert-warning border-0 rounded-2 mb-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle fa-2x me-3 text-warning"></i>
                            <div class="text-start">
                                <h6 class="alert-heading mb-1">Permission Required</h6>
                                <p class="mb-0 small">Please contact your system administrator if you believe this is an error.</p>
                            </div>
                        </div>
                    </div>

                    <!-- User Role Information -->
                    <div class="card bg-light border-0 mb-4">
                        <div class="card-body">
                            <h6 class="card-title text-primary mb-3">
                                <i class="fas fa-user-tag me-2"></i>Your Current Role
                            </h6>
                            <div class="d-flex justify-content-around text-center">
                                @if (User.IsInRole("Lecturer"))
                                {
                                    <div>
                                        <i class="fas fa-chalkboard-teacher fa-2x text-info mb-2"></i>
                                        <div class="fw-bold text-dark">Lecturer</div>
                                        <small class="text-muted">Can submit and track claims</small>
                                    </div>
                                }
                                @if (User.IsInRole("Coordinator"))
                                {
                                    <div>
                                        <i class="fas fa-tasks fa-2x text-warning mb-2"></i>
                                        <div class="fw-bold text-dark">Programme Coordinator</div>
                                        <small class="text-muted">Can approve claims and use automation tools</small>
                                    </div>
                                }
                                @if (User.IsInRole("AcademicManager"))
                                {
                                    <div>
                                        <i class="fas fa-user-tie fa-2x text-purple mb-2"></i>
                                        <div class="fw-bold text-dark">Academic Manager</div>
                                        <small class="text-muted">Has executive oversight capabilities</small>
                                    </div>
                                }
                                @if (User.IsInRole("HR"))
                                {
                                    <div>
                                        <i class="fas fa-users-cog fa-2x text-success mb-2"></i>
                                        <div class="fw-bold text-dark">HR Manager</div>
                                        <small class="text-muted">Can manage users and generate reports</small>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="mb-4">
                        <h6 class="text-primary mb-3">Quick Navigation</h6>
                        <div class="row g-3">
                            @if (User.IsInRole("Lecturer"))
                            {
                                <div class="col-md-6">
                                    <a asp-controller="Claims" asp-action="Submit" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-file-invoice-dollar me-2"></i>Submit Claim
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <a asp-controller="Claims" asp-action="TrackStatus" class="btn btn-outline-info w-100">
                                        <i class="fas fa-tasks me-2"></i>Track Status
                                    </a>
                                </div>
                            }
                            @if (User.IsInRole("Coordinator"))
                            {
                                <div class="col-md-6">
                                    <a asp-controller="Claims" asp-action="Approvals" class="btn btn-outline-success w-100">
                                        <i class="fas fa-check-circle me-2"></i>Approve Claims
                                    </a>
                                </div>
                            }
                            @if (User.IsInRole("AcademicManager"))
                            {
                                <div class="col-md-6">
                                    <a asp-controller="Claims" asp-action="AcademicManagerDashboard" class="btn btn-outline-purple w-100">
                                        <i class="fas fa-user-tie me-2"></i>Manager Dashboard
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <a asp-controller="HR" asp-action="Reports" class="btn btn-outline-info w-100">
                                        <i class="fas fa-chart-bar me-2"></i>View Reports
                                    </a>
                                </div>
                            }
                            @if (User.IsInRole("HR"))
                            {
                                <div class="col-md-6">
                                    <a asp-controller="HR" asp-action="Dashboard" class="btn btn-outline-success w-100">
                                        <i class="fas fa-tachometer-alt me-2"></i>HR Dashboard
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <a asp-controller="HR" asp-action="UserManagement" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-users me-2"></i>Manage Users
                                    </a>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Support Information -->
                    <div class="card border-0 bg-light">
                        <div class="card-body">
                            <h6 class="card-title text-primary mb-2">
                                <i class="fas fa-life-ring me-2"></i>Need Help?
                            </h6>
                            <p class="card-text small text-muted mb-2">
                                If you require access to this page, please contact:
                            </p>
                            <div class="row text-center">
                                <div class="col-md-6 mb-2">
                                    <i class="fas fa-envelope text-primary me-1"></i>
                                    <small class="text-dark">IT Support: itsupport@university.ac.za</small>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <i class="fas fa-phone text-primary me-1"></i>
                                    <small class="text-dark">HR Department: (011) 123-4567</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Return Home Button -->
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-4">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-purple {
        color: #6f42c1 !important;
    }

    .btn-outline-purple {
        color: #6f42c1;
        border-color: #6f42c1;
    }

        .btn-outline-purple:hover {
            color: #fff;
            background-color: #6f42c1;
            border-color: #6f42c1;
        }

    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
        }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const card = document.querySelector('.card');
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';

            setTimeout(() => {
                card.style.transition = 'all 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);

            // Log access denied event (for auditing)
            console.log('Access denied page accessed by user:', '@User.Identity.Name', 'at:', new Date().toLocaleString());
        });
    </script>
}