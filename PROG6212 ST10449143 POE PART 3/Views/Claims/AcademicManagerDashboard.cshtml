@model PROG6212_ST10449143_POE_PART_1.Controllers.AcademicManagerDashboardViewModel
@{
    ViewData["Title"] = "Academic Manager Dashboard - Claim Oversight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 text-primary">
            <i class="fas fa-user-tie me-2"></i>Academic Manager Dashboard - Claim Oversight
        </h1>
        <div class="btn-group">
            <a href="@Url.Action("Reports", "HR")" class="btn btn-outline-success">
                <i class="fas fa-chart-bar me-1"></i>Advanced Reports
            </a>
        </div>
    </div>

    <!-- Executive Summary -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Pending Claims
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AllPendingClaims.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-invoice-dollar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                High Value Claims
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.HighValueClaims.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total Pending Amount
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">R @Model.TotalPendingAmount.ToString("0,0.00")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Claims Ready for Review
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AllPendingClaims.Count(c => c.CurrentStage == "ManagerReview")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Department Summary -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-building me-2"></i>Department Summary</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Department</th>
                                    <th>Claims</th>
                                    <th>Total Amount</th>
                                    <th>Avg Hours</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dept in Model.DepartmentSummaries)
                                {
                                    <tr>
                                        <td><strong>@dept.Department</strong></td>
                                        <td>@dept.TotalClaims</td>
                                        <td>R @dept.TotalAmount.ToString("0,0.00")</td>
                                        <td>@dept.AverageHours.ToString("0.0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Workflow Status -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-project-diagram me-2"></i>Workflow Status</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body py-3">
                                    <h4>@Model.AllPendingClaims.Count(c => c.CurrentStage == "CoordinatorReview")</h4>
                                    <small>Coordinator Review</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="card bg-purple text-white">
                                <div class="card-body py-3">
                                    <h4>@Model.AllPendingClaims.Count(c => c.CurrentStage == "ManagerReview")</h4>
                                    <small>Manager Review</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card bg-success text-white">
                                <div class="card-body py-3">
                                    <h4>@Model.AllPendingClaims.Count(c => c.Status == "Approved")</h4>
                                    <small>Approved</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card bg-danger text-white">
                                <div class="card-body py-3">
                                    <h4>@Model.AllPendingClaims.Count(c => c.Status == "Rejected")</h4>
                                    <small>Rejected</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- High Value Claims -->
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>High Value Claims Requiring Attention (@Model.HighValueClaims.Count)
            </h5>
        </div>
        <div class="card-body">
            @if (!Model.HighValueClaims.Any())
            {
                <div class="alert alert-success text-center">
                    <i class="fas fa-check-circle me-2"></i>No high-value claims requiring attention.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-warning">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Department</th>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.HighValueClaims)
                            {
                                <tr>
                                    <td>@claim.Id</td>
                                    <td>@claim.User?.FirstName @claim.User?.LastName</td>
                                    <td>@claim.User?.Department</td>
                                    <td>@claim.Month</td>
                                    <td>@claim.HoursWorked.ToString("0.00")</td>
                                    <td class="fw-bold text-danger">R @claim.TotalAmount.ToString("0,0.00")</td>
                                    <td>
                                        <span class="badge bg-warning">@claim.Status</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", new { id = claim.Id })"
                                               class="btn btn-outline-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("ManagerApprovals")"
                                               class="btn btn-outline-success" title="Review Claim">
                                                <i class="fas fa-clipboard-check"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-purple {
        background-color: #9B59B6 !important;
    }
</style>