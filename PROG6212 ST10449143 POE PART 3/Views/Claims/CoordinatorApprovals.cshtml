@model List<PROG6212_ST10449143_POE_PART_1.Models.Claim>
@{
    ViewData["Title"] = "Coordinator Approvals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 text-primary">
            <i class="fas fa-clipboard-check me-2"></i>Coordinator Approvals
        </h1>
    </div>

    <!-- Session Status -->
    <div class="alert alert-info d-flex align-items-center">
        <i class="fas fa-info-circle me-2 fs-5"></i>
        <div>
            <strong>Session Active:</strong> You are reviewing claims as Coordinator.
            <span class="badge bg-warning ms-2">@Model.Count claims pending</span>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-success text-center py-5">
            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
            <h4>No Claims Pending Coordinator Review</h4>
            <p class="text-muted">All claims have been processed. New claims will appear here when submitted by lecturers.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var claim in Model)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">Claim #@claim.Id</h6>
                                <small class="text-dark">Submitted: @claim.SubmittedDate.ToString("MMM dd, yyyy HH:mm")</small>
                            </div>
                            <span class="badge badge-coordinator workflow-step">
                                <i class="fas fa-user-check me-1"></i>Coordinator Review
                            </span>
                        </div>

                        <div class="card-body">
                            <!-- Lecturer Information -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <h6 class="text-primary mb-2">
                                        <i class="fas fa-user-graduate me-2"></i>Lecturer Information
                                    </h6>
                                    <div class="d-flex justify-content-between">
                                        <span><strong>Name:</strong> @claim.LecturerName</span>
                                        <span><strong>Department:</strong> @(claim.User?.Department ?? "N/A")</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Claim Details -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <h6 class="text-primary mb-2">
                                        <i class="fas fa-file-invoice me-2"></i>Claim Details
                                    </h6>
                                    <div class="row">
                                        <div class="col-md-6 mb-2">
                                            <strong>Month:</strong> @claim.Month
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <strong>Hours Worked:</strong> @claim.HoursWorked.ToString("0.00")
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <strong>Hourly Rate:</strong> R @claim.HourlyRate.ToString("0.00")
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <strong class="text-success">Total Amount:</strong> R @claim.TotalAmount.ToString("0.00")
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Additional Information -->
                            @if (!string.IsNullOrEmpty(claim.AdditionalNotes))
                            {
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <h6 class="text-primary mb-2">
                                            <i class="fas fa-sticky-note me-2"></i>Additional Notes
                                        </h6>
                                        <p class="mb-0 text-muted">@claim.AdditionalNotes</p>
                                    </div>
                                </div>
                            }

                            <!-- Supporting Document -->
                            @if (!string.IsNullOrEmpty(claim.SupportingDocument))
                            {
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <h6 class="text-primary mb-2">
                                            <i class="fas fa-file me-2"></i>Supporting Document
                                        </h6>
                                        @{
                                            var fileParts = claim.SupportingDocument.Split('|');
                                            var displayName = fileParts.Length > 1 ? fileParts[1] : "Attached Document";
                                        }
                                        <a href="#" class="text-primary text-decoration-none">
                                            <i class="fas fa-download me-1"></i>@displayName
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="card-footer bg-light">
                            <div class="row g-2">
                                <div class="col-md-6">
                                    <form asp-action="CoordinatorApprove" method="post" class="d-inline w-100">
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-success w-100"
                                                onclick="return confirm('Approve claim #@claim.Id and forward to Academic Manager?')">
                                            <i class="fas fa-check me-1"></i>Approve & Forward
                                        </button>
                                    </form>
                                </div>
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-danger w-100"
                                            data-bs-toggle="modal" data-bs-target="#rejectModal@(claim.Id)">
                                        <i class="fas fa-times me-1"></i>Reject Claim
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reject Modal -->
                <div class="modal fade" id="rejectModal@(claim.Id)" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Reject Claim #@claim.Id</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <form asp-action="CoordinatorReject" method="post">
                                <input type="hidden" name="id" value="@claim.Id" />
                                <div class="modal-body">
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        This claim will be rejected and the lecturer will be notified.
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">Reason for Rejection</label>
                                        <textarea name="rejectionReason" class="form-control" rows="4"
                                          placeholder="Please provide a detailed reason for rejection..." required></textarea>
                                        <small class="text-muted">This reason will be shared with the lecturer.</small>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Confirm Rejection</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>