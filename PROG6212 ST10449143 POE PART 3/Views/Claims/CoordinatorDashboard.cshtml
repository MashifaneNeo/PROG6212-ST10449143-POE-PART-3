@model PROG6212_ST10449143_POE_PART_1.Controllers.CoordinatorDashboardViewModel
@{
    ViewData["Title"] = "Coordinator Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 text-primary">
            <i class="fas fa-clipboard-check me-2"></i>Coordinator Dashboard
        </h1>
        <div class="btn-group">
            <a href="@Url.Action("CoordinatorApprovals")" class="btn btn-outline-primary">
                <i class="fas fa-check-circle me-1"></i>Review Claims
            </a>
        </div>
    </div>

    <!-- Dashboard Statistics -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Pending Review
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingClaims.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-invoice-dollar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                High Value Claims
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingClaims.Count(c => c.TotalAmount > 10000)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Amount
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">R @Model.PendingClaims.Sum(c => c.TotalAmount).ToString("0,0.00")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Average Hours
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(Model.PendingClaims.Any() ? Model.PendingClaims.Average(c => c.HoursWorked).ToString("0.0") : "0.0")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Claims Pending Review -->
    <div class="card shadow border-0">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">
                <i class="fas fa-search me-2"></i>Claims Pending Coordinator Review (@Model.PendingClaims.Count)
            </h5>
        </div>
        <div class="card-body">
            @if (!Model.PendingClaims.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle me-2"></i>No claims pending coordinator review.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-warning">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Department</th>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.PendingClaims)
                            {
                                <tr>
                                    <td>@claim.Id</td>
                                    <td>@claim.User?.FirstName @claim.User?.LastName</td>
                                    <td>@claim.User?.Department</td>
                                    <td>@claim.Month</td>
                                    <td>@claim.HoursWorked.ToString("0.00")</td>
                                    <td>R @claim.TotalAmount.ToString("0.00")</td>
                                    <td>
                                        <span class="badge bg-warning">@claim.Status</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("CoordinatorApprovals")"
                                               class="btn btn-outline-success" title="Review Claim">
                                                <i class="fas fa-clipboard-check"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>