@model List<PROG6212_ST10449143_POE_PART_1.Models.Claim>
@{
    ViewData["Title"] = "Manager Final Approvals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 text-primary">
            <i class="fas fa-user-tie me-2"></i>Manager Final Approvals
        </h1>
    </div>

    <!-- Session Status -->
    <div class="alert alert-info d-flex align-items-center">
        <i class="fas fa-info-circle me-2 fs-5"></i>
        <div>
            <strong>Session Active:</strong> You are reviewing claims approved by Coordinators.
            <span class="badge bg-purple ms-2">@Model.Count claims pending final approval</span>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-success text-center py-5">
            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
            <h4>No Claims Pending Final Approval</h4>
            <p class="text-muted">All coordinator-approved claims have been processed. New claims will appear here after coordinator approval.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var claim in Model)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-purple text-white d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">Claim #@claim.Id</h6>
                                <small>Coordinator Approved: @claim.CoordinatorReviewDate</small>
                            </div>
                            <span class="badge badge-manager workflow-step">
                                <i class="fas fa-user-tie me-1"></i>Manager Review
                            </span>
                        </div>

                        <div class="card-body">
                            <!-- Workflow Progress -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <h6 class="text-primary mb-2">
                                        <i class="fas fa-project-diagram me-2"></i>Workflow Progress
                                    </h6>
                                    <div class="progress mb-2" style="height: 10px;">
                                        <div class="progress-bar bg-success" style="width: 50%">Coordinator Approved</div>
                                        <div class="progress-bar bg-purple" style="width: 50%">Manager Review</div>
                                    </div>
                                    <small class="text-muted">
                                        <i class="fas fa-user-check me-1 text-success"></i>
                                        Approved by: @claim.CoordinatorApprover
                                    </small>
                                </div>
                            </div>

                            <!-- Lecturer Information -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <h6 class="text-primary mb-2">
                                        <i class="fas fa-user-graduate me-2"></i>Lecturer Information
                                    </h6>
                                    <div class="d-flex justify-content-between">
                                        <span><strong>Name:</strong> @claim.LecturerName</span>
                                        <span><strong>Department:</strong> @(claim.User?.Department ?? "N/A")</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Claim Details -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <h6 class="text-primary mb-2">
                                        <i class="fas fa-file-invoice me-2"></i>Claim Details
                                    </h6>
                                    <div class="row">
                                        <div class="col-md-6 mb-2">
                                            <strong>Month:</strong> @claim.Month
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <strong>Hours Worked:</strong> @claim.HoursWorked.ToString("0.00")
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <strong>Hourly Rate:</strong> R @claim.HourlyRate.ToString("0.00")
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <strong class="text-success">Total Amount:</strong> R @claim.TotalAmount.ToString("0.00")
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Additional Information -->
                            @if (!string.IsNullOrEmpty(claim.AdditionalNotes))
                            {
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <h6 class="text-primary mb-2">
                                            <i class="fas fa-sticky-note me-2"></i>Additional Notes
                                        </h6>
                                        <p class="mb-0 text-muted">@claim.AdditionalNotes</p>
                                    </div>
                                </div>
                            }

                            <!-- High Value Warning -->
                            @if (claim.TotalAmount > 10000)
                            {
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <div class="alert alert-warning">
                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                            <strong>High Value Claim:</strong> This claim exceeds R10,000
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="card-footer bg-light">
                            <div class="row g-2">
                                <div class="col-md-6">
                                    <form asp-action="ManagerApprove" method="post" class="d-inline w-100">
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-success w-100"
                                                onclick="return confirm('Finalize approval for claim #@claim.Id? This will complete the workflow.')">
                                            <i class="fas fa-check-double me-1"></i>Final Approval
                                        </button>
                                    </form>
                                </div>
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-danger w-100"
                                            data-bs-toggle="modal" data-bs-target="#managerRejectModal@(claim.Id)">
                                        <i class="fas fa-times me-1"></i>Reject Claim
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Manager Reject Modal -->
                <div class="modal fade" id="managerRejectModal@(claim.Id)" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Reject Claim #@claim.Id</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <form asp-action="ManagerReject" method="post">
                                <input type="hidden" name="id" value="@claim.Id" />
                                <div class="modal-body">
                                    <div class="alert alert-danger">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        <strong>Warning:</strong> This claim was already approved by a coordinator.
                                        Rejecting it will override their decision.
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">Reason for Rejection</label>
                                        <textarea name="rejectionReason" class="form-control" rows="4"
                                          placeholder="Please provide a detailed reason for overriding the coordinator's approval..." required></textarea>
                                        <small class="text-muted">This reason will be recorded in the audit trail.</small>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Override & Reject</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <style>
        .bg-purple {
            background-color: #9B59B6 !important;
        }

        .badge-purple {
            background-color: #9B59B6;
            color: white;
        }

        .badge-manager {
            background: #9B59B6;
            color: white;
        }
    </style>
}