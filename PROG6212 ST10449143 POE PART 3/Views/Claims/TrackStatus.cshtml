@model List<PROG6212_ST10449143_POE_PART_1.Models.Claim>
@{
    ViewData["Title"] = "Track Claim Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">
        <i class="fas fa-tasks me-2"></i>Track Claim Status
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>No claims submitted yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var claim in Model)
            {
                <div class="col-lg-8 mb-4 mx-auto">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">Claim #@claim.Id - @claim.Month</h6>
                            <div>
                                <span class="badge @GetStatusBadgeClass(claim.Status, claim.CurrentStage) me-2">
                                    @GetStatusDisplayText(claim.Status, claim.CurrentStage)
                                </span>
                                <!-- Delete button -->
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@claim.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Are you sure you want to delete claim #@claim.Id? This action cannot be undone.')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="progress mb-4" style="height: 10px;">
                                <div class="progress-bar @GetProgressBarClass(claim.Status, claim.CurrentStage)"
                                     style="width: @GetProgressPercentage(claim.Status, claim.CurrentStage)%"
                                     role="progressbar"
                                     aria-valuenow="@GetProgressPercentage(claim.Status, claim.CurrentStage)"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>

                            <div class="row text-center mb-3">
                                <div class="col-3">
                                    <div class="@GetStepIconClass("Submitted", claim.Status, claim.CurrentStage) rounded-circle d-inline-flex align-items-center justify-content-center mb-1"
                                         style="width: 50px; height: 50px;">
                                        <i class="fas fa-paper-plane fs-5"></i>
                                    </div>
                                    <small class="d-block fw-bold mt-1">Submitted</small>
                                    <small class="text-muted">@claim.SubmittedDate.ToString("MMM dd")</small>
                                </div>
                                <div class="col-3">
                                    <div class="@GetStepIconClass("CoordinatorReview", claim.Status, claim.CurrentStage) rounded-circle d-inline-flex align-items-center justify-content-center mb-1"
                                         style="width: 50px; height: 50px;">
                                        <i class="fas fa-user-check fs-5"></i>
                                    </div>
                                    <small class="d-block fw-bold mt-1">Coordinator</small>
                                    <small class="text-muted">
                                        @if (!string.IsNullOrEmpty(claim.CoordinatorReviewDate))
                                        {
                                            @claim.CoordinatorReviewDate
                                        }
                                        else
                                        {
                                            @:Pending
                                        }
                                    </small>
                                </div>
                                <div class="col-3">
                                    <div class="@GetStepIconClass("ManagerReview", claim.Status, claim.CurrentStage) rounded-circle d-inline-flex align-items-center justify-content-center mb-1"
                                         style="width: 50px; height: 50px;">
                                        <i class="fas fa-user-tie fs-5"></i>
                                    </div>
                                    <small class="d-block fw-bold mt-1">Manager</small>
                                    <small class="text-muted">
                                        @if (!string.IsNullOrEmpty(claim.ManagerReviewDate))
                                        {
                                            @claim.ManagerReviewDate
                                        }
                                        else
                                        {
                                            @:Pending
                                        }
                                    </small>
                                </div>
                                <div class="col-3">
                                    <div class="@GetStepIconClass("Completed", claim.Status, claim.CurrentStage) rounded-circle d-inline-flex align-items-center justify-content-center mb-1"
                                         style="width: 50px; height: 50px;">
                                        <i class="fas fa-check fs-5"></i>
                                    </div>
                                    <small class="d-block fw-bold mt-1">Completed</small>
                                    <small class="text-muted">Final</small>
                                </div>
                            </div>

                            <!-- Claim Details -->
                            <div class="row small text-muted mt-4">
                                <div class="col-md-6 mb-2">
                                    <strong>Amount:</strong> R @claim.TotalAmount.ToString("0.00")
                                </div>
                                <div class="col-md-6 mb-2">
                                    <strong>Hours Worked:</strong> @claim.HoursWorked.ToString("0.00")
                                </div>
                                <div class="col-md-6 mb-2">
                                    <strong>Hourly Rate:</strong> R @claim.HourlyRate.ToString("0.00")
                                </div>
                                <div class="col-md-6 mb-2">
                                    <strong>Current Stage:</strong>
                                    <span class="fw-bold @GetStageTextClass(claim.CurrentStage)">
                                        @GetStageDisplayText(claim.CurrentStage)
                                    </span>
                                </div>
                                @if (!string.IsNullOrEmpty(claim.CoordinatorApprover))
                                {
                                    <div class="col-md-6 mb-2">
                                        <strong>Coordinator:</strong> @claim.CoordinatorApprover
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(claim.ManagerApprover))
                                {
                                    <div class="col-md-6 mb-2">
                                        <strong>Manager:</strong> @claim.ManagerApprover
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(claim.AdditionalNotes))
                                {
                                    <div class="col-12 mb-2">
                                        <strong>Notes:</strong> @claim.AdditionalNotes
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(claim.SupportingDocument))
                                {
                                    <div class="col-12 mb-2">
                                        <strong>Document:</strong>
                                        <span class="text-primary">
                                            <i class="fas fa-file me-1"></i>
                                            @{
                                                var fileParts = claim.SupportingDocument.Split('|');
                                                var displayName = fileParts.Length > 1 ? fileParts[1] : "Attached Document";
                                            }
                                            @displayName
                                        </span>
                                    </div>
                                }
                            </div>

                            <!-- Status Messages -->
                            @if (claim.Status == "Rejected" && !string.IsNullOrEmpty(claim.RejectionReason))
                            {
                                <div class="alert alert-danger mt-3 mb-0">
                                    <strong><i class="fas fa-exclamation-triangle me-1"></i>Rejection Reason:</strong> @claim.RejectionReason
                                </div>
                            }
                            else if (claim.Status == "Approved")
                            {
                                <div class="alert alert-success mt-3 mb-0">
                                    <strong><i class="fas fa-check-circle me-1"></i>Claim Approved:</strong> This claim has been fully approved and processed.
                                </div>
                            }
                            else if (claim.CurrentStage == "ManagerReview")
                            {
                                <div class="alert alert-info mt-3 mb-0">
                                    <strong><i class="fas fa-user-tie me-1"></i>With Academic Manager:</strong> Your claim has been approved by the Programme Coordinator and is now with the Academic Manager for final approval.
                                </div>
                            }
                            else if (claim.CurrentStage == "CoordinatorReview")
                            {
                                <div class="alert alert-warning mt-3 mb-0">
                                    <strong><i class="fas fa-user-check me-1"></i>With Programme Coordinator:</strong> Your claim is currently being reviewed by the Programme Coordinator.
                                </div>
                            }
                            
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@functions {
    private string GetStatusDisplayText(string status, string currentStage)
    {
        if (status == "Under Review")
        {
            return currentStage switch
            {
                "CoordinatorReview" => "With Coordinator",
                "ManagerReview" => "With Manager",
                _ => status
            };
        }
        return status;
    }

    private string GetStageDisplayText(string currentStage)
    {
        return currentStage switch
        {
            "CoordinatorReview" => "With Coordinator",
            "ManagerReview" => "With Manager",
            "Completed" => "Completed",
            _ => currentStage
        };
    }

    private string GetStageTextClass(string currentStage)
    {
        return currentStage switch
        {
            "CoordinatorReview" => "text-warning",
            "ManagerReview" => "text-info",
            "Completed" => "text-success",
            _ => "text-muted"
        };
    }

    private string GetStatusBadgeClass(string status, string currentStage)
    {
        if (status == "Under Review")
        {
            return currentStage switch
            {
                "CoordinatorReview" => "bg-warning",
                "ManagerReview" => "bg-info",
                _ => "bg-warning"
            };
        }

        return status switch
        {
            "Submitted" => "bg-secondary",
            "Under Review" => "bg-warning",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "Pending Manager Review" => "bg-info",
            _ => "bg-secondary"
        };
    }

    private string GetProgressBarClass(string status, string currentStage)
    {
        if (status == "Under Review")
        {
            return currentStage switch
            {
                "CoordinatorReview" => "bg-warning",
                "ManagerReview" => "bg-info",
                _ => "bg-warning"
            };
        }

        return status switch
        {
            "Rejected" => "bg-danger",
            "Approved" => "bg-success",
            "Under Review" => "bg-warning",
            "Submitted" => "bg-info",
            "Pending Manager Review" => "bg-info",
            _ => "bg-secondary"
        };
    }

    private int GetProgressPercentage(string status, string currentStage)
    {
        // Progress based on workflow stage
        if (status == "Rejected" || status == "Approved")
        {
            return 100;
        }

        return currentStage switch
        {
            "CoordinatorReview" => 33,
            "ManagerReview" => 66,
            "Completed" => 100,
            _ => 0
        };
    }

    private string GetStepIconClass(string step, string status, string currentStage)
    {
        var stepOrder = new Dictionary<string, int>
        {
            ["Submitted"] = 1,
            ["CoordinatorReview"] = 2,
            ["ManagerReview"] = 3,
            ["Completed"] = 4
        };

        var currentStepIndex = GetCurrentStepIndex(status, currentStage);
        var stepIndex = stepOrder.ContainsKey(step) ? stepOrder[step] : 0;

        if (status == "Rejected")
        {
            return stepIndex > 1 ? "bg-danger text-white" : "bg-success text-white";
        }

        if (stepIndex <= currentStepIndex)
        {
            return "bg-success text-white";
        }

        return "bg-light text-muted border";
    }

    private int GetCurrentStepIndex(string status, string currentStage)
    {
        if (status == "Approved" || status == "Rejected")
        {
            return 4; 
        }

        return currentStage switch
        {
            "CoordinatorReview" => 2,
            "ManagerReview" => 3,
            "Completed" => 4,
            _ => 1
        };
    }
}