@model PROG6212_ST10449143_POE_PART_1.Models.ReportFilterViewModel
@{
    ViewData["Title"] = "Reports & Analytics";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var totalClaims = ViewBag.TotalClaims ?? 0;
    var approvedClaims = ViewBag.ApprovedClaims ?? 0;
    var pendingClaims = ViewBag.PendingClaims ?? 0;
    var rejectedClaims = ViewBag.RejectedClaims ?? 0;
    var totalUsers = ViewBag.TotalUsers ?? 0;
    var totalAmount = ViewBag.TotalAmount ?? "0.00";
    var averageClaim = ViewBag.AverageClaim ?? "0.00";
    var departmentStats = ViewBag.DepartmentStats as dynamic ?? new List<object>();
    var monthlyTrends = ViewBag.MonthlyTrends as dynamic ?? new List<object>();
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 text-primary">
            <i class="fas fa-chart-bar me-2"></i>Reports & Analytics
        </h1>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Report Filters</h5>
                </div>
                <div class="card-body">
                    <form asp-action="GenerateReport" method="post" id="reportForm">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="ReportType" class="form-label fw-semibold">Report Type *</label>
                            <select asp-for="ReportType" class="form-select" required>
                                <option value="">-- Select Report Type --</option>
                                <option value="Monthly">Monthly Summary</option>
                                <option value="User">User Claims Report</option>
                                <option value="Department">Department Summary</option>
                                <option value="All">All Claims</option>
                            </select>
                            <span asp-validation-for="ReportType" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label fw-semibold">Start Date</label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label fw-semibold">End Date</label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Department" class="form-label fw-semibold">Department</label>
                            <select asp-for="Department" class="form-select">
                                <option value="">All Departments</option>
                                <option value="Computer Science">Computer Science</option>
                                <option value="Engineering">Engineering</option>
                                <option value="Business">Business</option>
                                <option value="Mathematics">Mathematics</option>
                                <option value="Physics">Physics</option>
                                <option value="Chemistry">Chemistry</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-semibold">Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="">All Statuses</option>
                                <option value="Submitted">Submitted</option>
                                <option value="Under Review">Under Review</option>
                                <option value="Approved">Approved</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-file-pdf me-2"></i>Generate PDF Report
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4 col-6 mb-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body py-3">
                                    <h3>@totalClaims</h3>
                                    <small>Total Claims</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-6 mb-3">
                            <div class="card bg-success text-white">
                                <div class="card-body py-3">
                                    <h3>@approvedClaims</h3>
                                    <small>Approved</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-6 mb-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body py-3">
                                    <h3>@pendingClaims</h3>
                                    <small>Pending</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-6 mb-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body py-3">
                                    <h3>@rejectedClaims</h3>
                                    <small>Rejected</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-6 mb-3">
                            <div class="card bg-info text-white">
                                <div class="card-body py-3">
                                    <h3>@totalUsers</h3>
                                    <small>Total Users</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-6 mb-3">
                            <div class="card bg-secondary text-white">
                                <div class="card-body py-3">
                                    <h3>R @totalAmount</h3>
                                    <small>Total Amount</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Statistics -->
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h4 class="text-primary">R @averageClaim</h4>
                                    <small class="text-muted">Average Claim Amount</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h4 class="text-success">@(totalClaims > 0 ? ((double)approvedClaims / totalClaims * 100).ToString("0.0") : "0")%</h4>
                                    <small class="text-muted">Approval Rate</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Department Statistics -->
                    @if (departmentStats.Count > 0)
                    {
                        <div class="mt-4">
                            <h6>Claims by Department</h6>
                            <div class="list-group">
                                @foreach (var dept in departmentStats)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>@dept.Department</span>
                                        <span class="badge bg-primary rounded-pill">@dept.Count</span>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="mt-4">
                        <h6>Recent Report Templates</h6>
                        <div class="list-group">
                            <a href="#" class="list-group-item list-group-item-action" onclick="setMonthlyReport()">
                                <i class="fas fa-file-pdf text-danger me-2"></i>
                                <strong>Monthly Claims Report - @DateTime.Now.ToString("MMMM yyyy")</strong>
                                <small class="text-muted d-block">Summary of all claims for current month</small>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action" onclick="setAllClaimsReport()">
                                <i class="fas fa-file-excel text-success me-2"></i>
                                <strong>All Claims Report</strong>
                                <small class="text-muted d-block">Complete claims database export</small>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action" onclick="setApprovedClaimsReport()">
                                <i class="fas fa-file-invoice-dollar text-primary me-2"></i>
                                <strong>Approved Claims Report</strong>
                                <small class="text-muted d-block">Approved claims ready for payment</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            const lastDay = new Date(today.getFullYear(), today.getMonth() + 1, 0);

            document.getElementById('StartDate').value = formatDate(firstDay);
            document.getElementById('EndDate').value = formatDate(lastDay);

            function formatDate(date) {
                return date.toISOString().split('T')[0];
            }

            document.getElementById('reportForm').addEventListener('submit', function(e) {
                const reportType = document.getElementById('ReportType').value;
                if (!reportType) {
                    e.preventDefault();
                    alert('Please select a report type.');
                    return false;
                }
                return true;
            });
        });

        function setMonthlyReport() {
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            const lastDay = new Date(today.getFullYear(), today.getMonth() + 1, 0);

            document.getElementById('ReportType').value = 'Monthly';
            document.getElementById('StartDate').value = formatDate(firstDay);
            document.getElementById('EndDate').value = formatDate(lastDay);
        }

        function setAllClaimsReport() {
            document.getElementById('ReportType').value = 'All';
            document.getElementById('StartDate').value = '';
            document.getElementById('EndDate').value = '';
            document.getElementById('Department').value = '';
            document.getElementById('Status').value = '';
        }

        function setApprovedClaimsReport() {
            document.getElementById('ReportType').value = 'All';
            document.getElementById('Status').value = 'Approved';
        }

        function formatDate(date) {
            return date.toISOString().split('T')[0];
        }
    </script>
}